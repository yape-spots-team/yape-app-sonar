<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/detailplace_favorite"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_circle_favorito_selector"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/openImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textOpenStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Disponible"
        android:layout_toRightOf="@id/openImage"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/detailplace_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textOpenStatus"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detailplace_typetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        android:layout_marginBottom="10dp">

    <ImageButton
        android:id="@+id/detailplace_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_detailplace_like"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/directionsButton"
        android:layout_marginRight="100dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/directionsButton"
        android:layout_width="wrap_content"
        android:background="@null"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_detailplace_directions"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/detailplace_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/icon_detailplace_report"
        android:layout_toRightOf="@+id/directionsButton"
        android:layout_marginLeft="100dp"/>
    </RelativeLayout>

    <TableRow
        android:id="@+id/hr2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444"></TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/detailplace_call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:background="@null"
            android:foregroundGravity="center"
            android:layout_toLeftOf="@+id/detailplace_share_icon"
            android:src="@drawable/icon_detailplace_call"
            />

        <TextView
            android:id="@+id/detailplace_call_icon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailplace_call_icon"
            android:layout_marginTop="0dp"
            android:layout_marginRight="71dp"
            android:layout_toLeftOf="@+id/detailplace_share_icon_label"
            android:text="Llamar" />

        <ImageButton
            android:id="@+id/detailplace_share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_detailplace_share" />

        <TextView
            android:id="@+id/detailplace_share_icon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/detailplace_share_icon"
            android:text="Compartir"/>

        <ImageButton
            android:id="@+id/detailplace_googlemaps_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:layout_toRightOf="@+id/detailplace_share_icon"
            android:src="@drawable/icon_detailplace_googlemaps" />

        <TextView
            android:id="@+id/detailplace_googlemaps_icon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailplace_call_icon"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/detailplace_share_icon_label"
            android:text="Ver en Maps" />
    </RelativeLayout>

</LinearLayout>